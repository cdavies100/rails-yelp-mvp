<div class="container">
  <p>
    <strong>Name:</strong>
    <%= @restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Telephone:</strong>
    <%= @restaurant.phone_number %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @restaurant.category %>
  </p>

  <%= link_to 'Create a review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>


  <%= link_to 'Back', restaurants_path, class: 'btn btn-danger' %>

  <ul>
    <% @restaurant.reviews.each do |review| %>
    <li>Review: <%= review.content %> Rating: <%= review.rating %></li>
    <% end %>
  </ul>
</div>
